{
    "$schema": "https://json-schema.org/draft-07/schema",
    "$id": "https://raw.githubusercontent.com/jskherman/cv.typ/main/cv.typ.schema.json",
    "title": "@jskherman's CV Typst Schema",
    "description": "Schema for the @jskherman's Curriculum Vitae YAML-Typst Template",
    "type": "object",
    "properties": {
        "personal": {
            "type": "object",
            "properties": {
                "name": {
                    "type": "string"
                },
                "email": {
                    "type": "string",
                    "format": "email"
                },
                "phone": {
                    "type": "string"
                },
                "url": {
                    "type": "string",
                    "format": "uri"
                },
                "location": {
                    "type": "object",
                    "properties": {
                        "city": {
                            "type": "string"
                        },
                        "region": {
                            "type": "string"
                        },
                        "postalCode": {
                            "type": [
                                "integer",
                                "string"
                            ]
                        },
                        "country": {
                            "type": "string"
                        }
                    },
                    "required": [
                        "city",
                        "region",
                        "postalCode",
                        "country"
                    ]
                },
                "profiles": {
                    "type": "array",
                    "items": {
                        "type": "object",
                        "properties": {
                            "network": {
                                "type": "string"
                            },
                            "username": {
                                "type": "string"
                            },
                            "url": {
                                "type": "string",
                                "format": "uri"
                            }
                        },
                        "required": [
                            "network",
                            "username",
                            "url"
                        ]
                    }
                }
            },
            "required": [
                "name",
                "email",
                "phone",
                "url",
                "location",
                "profiles"
            ]
        },
        "work": {
            "type": "array",
            "items": {
                "type": "object",
                "properties": {
                    "organization": {
                        "type": "string"
                    },
                    "position": {
                        "type": "string"
                    },
                    "url": {
                        "type": "string",
                        "format": "uri"
                    },
                    "location": {
                        "type": "string"
                    },
                    "startDate": {
                        "type": "string",
                        "format": "date"
                    },
                    "endDate": {
                        "type": "string",
                        "format": "date"
                    },
                    "highlights": {
                        "type": [
                            "array",
